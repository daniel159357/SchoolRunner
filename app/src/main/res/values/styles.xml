<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Bottom navigation bar style -->
    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/primary</item>
        <item name="itemTextColor">@color/primary</item>
        <item name="itemIconSize">20dp</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationTextStyle</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationTextStyle</item>
        <item name="itemRippleColor">@android:color/transparent</item>
        <item name="itemHorizontalTranslationEnabled">false</item>
    </style>
</resources> 